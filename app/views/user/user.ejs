<%- include("../header")%>
<div class="row">
	<div class="col-sm-8 offset-sm-2">
		<form method="POST" action="/user" class="form-horizontal jumbotron" id="pay">
			<fieldset>
				<legend>Usuário do sistema</legend>
				<% if(errors && errors.length>0){ %>
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>Pagamento recusado, verifique as informações abaixo.</strong> 
						<ul>

						<% for(var i = 0; i < errors.length; i++) { %>
							<li class="text-primary"><%=errors[i].msg%></li>
						<% } %>
						</ul>
					</div>
				<% } %>
				<input type="hidden" name="_id" value="<%=user._id%>">
				<div class="form-group">
					<label class="control-label">Nome</label>
    				<input class="form-control" type="text" placeholder="Nome do usuário ou da aplicação" name="username" value="<%=user.username%>">
				</div>
				<div class="form-group">
					<label class="control-label">Senha</label>
    				<input class="form-control" type="password" placeholder="Digite a senha para esse usuário" name="password">
				</div>
				<% if (user.token) { -%>
					<div class="form-group">
						<label class="control-label">API Token</label>
	    				<input class="form-control" type="text" readonly="" value="<%=user.token%>">
					</div>	
				<% } -%>
				<div class="form-group">
					<input class="btn btn-primary" type="submit" value="Salvar Usuário">
				</div>
			</fieldset>
		</form>
	</div>
</div>
<%- include("../footer")%>