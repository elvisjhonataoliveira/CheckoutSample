<%- include("../header")%>
<div class="row">
	<div class="col-md-8 offset-md-2 ">
		<table class="table table-hover table-responsive" width="100%">
			<thead>
				<tr>
					<th>Ações</th>
					<th>Data</th>
					<th>Status</th>
					<th>Email</th>
					<th>Valor</th>
					<th>Tipo de Pagamento</th>
				</tr>
			</thead>
			<tbody>
				<% if (result && result.length>0) { -%>
					<% for (var i = 0; i < result.length; i++) { -%>
						<tr>
							<td>
								<a href="/checkout/<%= result[i]._id %>"><i class="fas fa-eye fa-1x"></i></a>
							</td>
							<td><%= result[i].creationDate.toLocaleDateString() %></td>
							<td><%= result[i].status %></td>
							<td><%= result[i].email %></td>
							<td><%= result[i].amount %></td>							
							<td>
							<% if (result[i].paymentMethodId!=undefined && result[i].paymentMethodId!="") { -%>
								<%=result[i].paymentMethodId%>
							<% } else { -%>
								<%=result[i].paymentMethod%>
							<% } -%>
							</td>							
						</tr>
					<% } -%>	
				<% } -%>
			</tbody>
		</table>
	</div>
</div>
<%- include("../footer")%>